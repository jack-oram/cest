
<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Description</th>
      <th>Condition</th>
    </tr>
  </thead>
 
  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= trade.product_name %></td>
        <td><%= trade.description %></td>
        <td><%= trade.condition_part %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 